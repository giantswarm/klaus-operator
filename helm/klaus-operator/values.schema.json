{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "registry": {
      "type": "object",
      "properties": {
        "domain": {
          "type": "string"
        }
      },
      "required": ["domain"]
    },
    "image": {
      "type": "object",
      "properties": {
        "repository": {
          "type": "string"
        },
        "tag": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"]
        }
      },
      "required": ["repository"]
    },
    "klausImage": {
      "type": "string"
    },
    "replicaCount": {
      "type": "integer",
      "minimum": 1
    },
    "leaderElection": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        }
      }
    },
    "anthropicKeySecret": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        }
      },
      "required": ["name"]
    },
    "mcp": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        }
      }
    },
    "muster": {
      "type": "object",
      "properties": {
        "namespace": {
          "type": "string"
        },
        "registerOperator": {
          "type": "boolean"
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "limits": {
          "type": "object"
        },
        "requests": {
          "type": "object"
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean"
        },
        "annotations": {
          "type": "object"
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "port": {
          "type": "integer"
        }
      }
    },
    "probes": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer"
        }
      }
    },
    "serviceMonitor": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "interval": {
          "type": "string"
        },
        "scrapeTimeout": {
          "type": "string"
        }
      }
    },
    "podSecurityContext": {
      "type": "object"
    },
    "securityContext": {
      "type": "object"
    },
    "nodeSelector": {
      "type": "object"
    },
    "tolerations": {
      "type": "array"
    },
    "affinity": {
      "type": "object"
    }
  },
  "required": ["registry", "image"]
}
